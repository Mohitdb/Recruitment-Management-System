<div class="row">
  <div class="col-sm-12">
    <form id="static-form1" method="post" action="/login">
      <div class="form-userName">
        <label for="username">Enter username:</label>
        <input type="text" class="form-control" id="username" name="userName" placeholder="Enter Text" value="{{username}}">
      </div>
      <div class="usererror" id="usererror" hidden></div>
      <div class="form-password">
        <label for="password">Enter password:</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Enter Text" value="{{password}}" required>
      </div>
      {{#if hasError}}
        <p class = "logineError">{{error}}</p>
      {{/if}}

      <div>
        <input type="radio" id="applicant" name="radioButton" value="Applicant" checked>
        <label for="applicant">Applicant</label>
      </div>

      <div>
        <input type="radio" id="recruiter" name="radioButton" value="Recruiter">
        <label for="recruiter">Recruiter</label>
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-default">Login</button>
      </div>





      <div class="form-group hidden" id="error-container">
        <div class="alert alert-danger text-goes-here">
        </div>
      </div>
      <div class="form-group hidden" id="result-container">
        <div class="alert alert-success text-goes-here">
        </div>
      </div>
    </form>
    <p>OR</p>
    <form id="static-form2" method="get" action="/signup">
      <div class="form-group">
        <button type="submit" class="btn btn-default">New Applicant Signup</button>
      </div>
    </form>
  </div>
</div>