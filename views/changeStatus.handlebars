<form method="POST" id="statusButton" action="/employer/applicationStatus/{{jobId}}/{{userId}}">
    <input type="radio" id="status" name="radioButton" value="Pending" checked>
    <label for="status">Pending</label>
    <input type="radio" id="status" name="radioButton" value="Interview">
    <label for="status">Interview</label>
    <input type="radio" id="status" name="radioButton" value="Accepted">
    <label for="status">Accepted</label>
    <input type="radio" id="status" name="radioButton" value="Rejected">
    <label for="status">Rejected </label>
    <button type="submit" class="btn btn-default">Submit</button>
</form>