<div class='container'>
    <form  id='applicationSubmissionForm' method ="POST" action ="/profile">
        <hr>
        <h2>Personal Information</h2>
        <hr>
        <table class='table table-striped'>
            <tr>
                <th><label>First Name:</label></th>
                <td></td>
                <td><input class='form-control' type='text' name='firstName' required></td>
            </tr>
            <tr>
                <th><label>Middle Name:</label></th>
                <td></td>
                <td><input class='form-control' type='text' id='middleName' name='middleName'></td>
            </tr>
            <tr>
                <th><label>Last Name:</label></th>
                <td></td>
                <td><input class='form-control' type='text' name='lastName' required></td>
            </tr>
            {{!-- <tr>
                <th><label>Email:</label></th>
                <td></td>
                <td><input class='form-control' type='email' name='email' required></td>
            </tr> --}}
            <tr>
                <th><label>Phone Number:</label></th>
                <td></td>
                <td><input type='tel' pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" name='phoneNumber' class='form-control'
                        placeholder="000-000-0000" required></td>
            </tr>
            <tr>
                <th rowspan="6" name='address'><label>Address:</label></th>
            </tr>
            <tr>
                <td><label>Street Address:</label></td>
                <td><input class='form-control' type='text' name='street' required></td>
            </tr>

            <tr>
                <td><label>Apartment/Floor/Suite:</label></td>
                <td><input class='form-control' type='number' name='aptNumber'></td>
            </tr>
            <tr>
                <td><label>City:</label></td>
                <td><input class='form-control' type='text' name='city' required></td>
            </tr>
            <tr>
                <td><label>State:</label></td>
                <td>
                    <select class="form-control" id='state' name="state" required>
                        <option value="">N/A</option>
